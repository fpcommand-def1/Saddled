---
import MainLayout from "../layouts/MainLayout.astro";
import {Image} from "astro:assets";
import error from "../assets/icons/error.png";
import ButtonWhite from "../components/Button/ButtonWhite.astro";
---

<MainLayout title="404 - Page Not found" description="Oops! The page you're looking for isn't here. Find your next great motorcycle story or return to The Saddled homepage.">
    <div class="flex flex-col items-center justify-center text-center gap-6 mt-20 md:mt-50 px-4">
        <Image 
          src={error} 
          alt="404 - Adventure Not Found" 
          height={250} 
          width={300} 
          class="mt-6 grayscale contrast-125" 
        />
      
        <h1 class="text-5xl font-extrabold tracking-wider text-black uppercase">Page Not Found</h1>
      
        <p class="text-lg text-gray-600 max-w-xl">
          Sorry, we couldn't find the page you were looking for. It might have gone off-road.
        </p>
      
        <ButtonWhite buttonText="GO BACK" link="/">
      </div>
</MainLayout>