---

import ButtonDark from "../Button/ButtonDark.astro";
const {recentPost} = Astro.props;






---



{recentPost && (
<div class='overflow-x-hidden relative w-full h-full'>
    <div id="hero" class="flex transition-transform ease-in-out duration-700">
       
                <div class='relative w-full h-full flex-shrink-0'>
                    <img src={recentPost.data.image} alt='Cover Slide' class="w-screen h-screen object-cover flex-shrink-0 z-[-10]" loading="lazy" decoding="async" width="1200" height="800" />
                    <div class="absolute bottom-8 bg-black/60 flex flex-col items-center justify-center w-full">
                        <p class='text-white text-2xl sm:text-5xl font-bold text-center p-2 sm:p-5'>{recentPost.data.title?.toUpperCase()}</p>
                        <p class='text-white text-xl sm:text-3xl pb-2 sm:pb-5 text-center'><em>{recentPost.data.author?.toUpperCase()}</em></p>
                        {/* <a href="">
                            <button class='border-white border-2 bg-black text-white sm:text-xl px-4 py-1 sm:px-8 sm:py-2 cursor-pointer hover:ring-2 z-20'>READ</button>
                        </a> */}
                        <ButtonDark buttonText="READ" link={`/post/${recentPost.slug}`} />
                    </div>
                </div>
        </div>
      
    </div>
)}
   

