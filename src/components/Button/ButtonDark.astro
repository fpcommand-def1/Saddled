---

const {buttonText, link} = Astro.props;

interface Props{
    buttonText:string,
    link: string
}
---

<a href={link} class="border-white border-2 bg-black text-white sm:text-xl mt-2 px-4 py-1 sm:px-8 sm:py-2 cursor-pointer z-20 hover:text-black hover:bg-white hover:border-black transition duration-300 uppercase tracking-wide" aria-label="Button">
    {buttonText}
  </a>

  