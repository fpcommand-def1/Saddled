---
//Login Header for Not Signed In Users
---
<div id="login-state-container" class="text-center my-4">
  <!-- Login CTA -->
  <div id="login-cta" class='flex justify-center mb-2'>
    <a id="login-btn" class="border-white border-2 bg-black text-white sm:text-xl mt-2 px-4 py-1 sm:px-8 sm:py-2 cursor-pointer z-20 hover:text-black hover:bg-white hover:border-black transition duration-300 uppercase tracking-wide">
      LOGIN TO JOIN / CREATE RIDES
    </a>
  </div>

</div>

<script is:inline>
    document.addEventListener("astro:page-load", () => {
    const token = sessionStorage.getItem("token");
    const loginBtn = document.getElementById("login-btn");

     if (token) {
        if (loginBtn) {
            loginBtn.href = '/ridesLogin';
        }
        else{

        }      
    } else {
        if (loginBtn) {
            loginBtn.href = '/login';
        }

    }
})

</script>
