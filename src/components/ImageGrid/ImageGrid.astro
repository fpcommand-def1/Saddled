---
export interface Props {
  images: {
    src: string;
    alt: string;
  }[];
}
const { images } = Astro.props;
---

<div class="aspect-[4/3] grid grid-cols-1 sm:grid-cols-2 gap-2 my-10">
    {images.map((img, index) => (
      <div class={`${index >= 2 ? 'col-span-1' : 'sm:col-span-2'} w-full`}>
        <img
          src={img.src}
          alt={img.alt}
          class="w-full h-full object-cover rounded-lg shadow-md"
          loading="lazy"
          decoding="async"
          width="1200"
          height="800"
        />
      </div>
    ))}
  </div>